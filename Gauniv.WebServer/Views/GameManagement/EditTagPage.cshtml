@model Gauniv.WebServer.ViewModels.TagViewModel
@{
    ViewData["Title"] = "Edit Tag";
}

<link rel="stylesheet" href="~/css/editTag.css">

<div class="edit-tag-container">
    <div class="edit-tag-header">
        <h1>Edit Tag</h1>
        <p class="subtitle">Modify tag details below</p>
    </div>

    <form asp-action="EditTag" method="post" class="edit-tag-form">
        <input asp-for="Id" type="hidden" />
        
        <div class="form-group">
            <label asp-for="Name" class="form-label">Tag Name</label>
            <input asp-for="Name" class="form-input" placeholder="Enter tag name" />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="EditTagListPage" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>