@model Gauniv.WebServer.ViewModels.CreateGameViewModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Game Creation";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<h1>Create a New Game</h1>

<div class="create-game-form-container">
    <form asp-action="CreateGame" method="post" enctype="multipart/form-data" class="create-game-form">
        <div class="form-group">
            <label asp-for="Name">Game's name</label>
            <input asp-for="Name" class="form-control" />
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <label asp-for="Price">Price (â‚¬)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <label asp-for="ImagePath">Game Image</label>
            <input asp-for="ImagePath" class="form-control" type="text" />
            <label>Tags</label>
            <div class="tag-checkboxes">
                @foreach (var tag in Model.AvailableTags)
                {
                    <div class="form-check">
                        <input 
                            type="checkbox" 
                            name="SelectedTagIds" 
                            value="@tag.Id" 
                            id="tag_@tag.Id" />
                        <label class="form-check-label" for="tag_@tag.Id">@tag.Name</label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create Game</button>
    </form>
</div>